<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".SensorActivity">

    <TextView
        android:id="@+id/txtDirectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compass_heading"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imgCompass"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_compass_rose"
        android:contentDescription="@string/compass_image_description" />

    <TextView
        android:id="@+id/txtDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_direction_placeholder"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/txtStepsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_taken_label"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imgSteps"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_steps_icon"
        android:contentDescription="@string/steps_image_description" />

    <TextView
        android:id="@+id/txtSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_taken_placeholder"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>