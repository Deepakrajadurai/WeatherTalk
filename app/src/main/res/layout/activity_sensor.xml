<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F8F0F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Compass Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/imgCompass"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/compass"
            app:tint="#1976D2"
            android:contentDescription="@string/compass_desc" />

        <TextView
            android:id="@+id/txtDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wind_direction"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Step Counter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/imgSteps"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_footsteps"
            app:tint="#388E3C"
            android:contentDescription="@string/step_counter_desc" />

        <TextView
            android:id="@+id/txtSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steps_taken"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</LinearLayout>
