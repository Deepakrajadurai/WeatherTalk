<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F0F8">

    <ImageView
        android:id="@+id/imgCompass"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/compass"
        android:contentDescription="@string/compass_description"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/txtDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_direction_label"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/imgSteps"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_footsteps"
        android:contentDescription="@string/step_counter_description" />

    <TextView
        android:id="@+id/txtSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_label"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

</LinearLayout>